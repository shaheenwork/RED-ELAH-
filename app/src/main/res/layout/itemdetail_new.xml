<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E8ECEE" >
    <FrameLayout 
        android:id="@+id/layoutWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@android:color/transparent"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:paddingBottom="10dp">
		    <View 
		        android:id="@+id/divider"
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="#87A0B0"
		        android:layout_alignParentTop="true"
		        android:layout_marginBottom="10dp"/>
		    <TextView 
		        android:id="@+id/field_description"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textAppearance="@android:style/TextAppearance.Medium"
		        android:textStyle="bold"
		        android:textColor="#2E2F31"
		        android:text="Big frut bosco"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/divider"/>
		    <TextView 
		        android:id="@+id/field_number"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="@android:style/TextAppearance.Medium"
		        android:textStyle="bold"
		        android:textColor="#6385A1"
		        android:text="401"
		        android:layout_below="@id/field_description"
		        android:layout_alignLeft="@id/field_description"/>
		    
		     <ImageView 
		        android:id="@+id/btn_info"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_info"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dp"/>
		      <Spinner 
		        android:id="@+id/field_taglio_pz"
		        android:layout_width="62dp"
		        android:layout_height="36dp"
		        android:background="@drawable/edit_box_tr_bk"
		        android:layout_toLeftOf="@id/btn_info"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="6dp"
		        android:entries="@array/prezzopromo"
		        android:padding="5dp"/>
		    <TextView 
		        android:id="@+id/lbl_taglio_pz"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/taglio_pz"
		        android:textAppearance="@android:style/TextAppearance.Small"
		        android:textColor="@android:color/black"
		        android:layout_toLeftOf="@id/field_taglio_pz"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dp"/>
		    <com.eteam.dufour.customview.CustomSpinner 
		        android:id="@+id/field_volantino"
		        android:layout_width="62dp"
		        android:layout_height="36dp"
		        android:background="@drawable/edit_box_tr_bk"
		        android:layout_toLeftOf="@id/lbl_taglio_pz"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="6dp"
		        android:padding="5dp"
		        android:entries="@array/si_no"/>
		            
		    <TextView 
		        android:id="@+id/lbl_volantino"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/volantino"
		        android:textAppearance="@android:style/TextAppearance.Small"
		        android:textColor="@android:color/black"
		        android:layout_toLeftOf="@id/field_volantino"
		        android:layout_centerVertical="true"/>
		    
		
		</RelativeLayout>
		
	</FrameLayout>
	<include 
	    android:id="@+id/layoutMinimise"
	    layout="@layout/layout_minimise"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"/>
</LinearLayout>