<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background">
    <LinearLayout 
        android:id="@+id/layout_details"
        android:layout_width="450dp"
        android:layout_height="226dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#E7EDED">
        <TextView 
            android:id="@+id/field_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_no_net_connection"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="22dp"
            android:textColor="#343635"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_marginBottom="25dp"/>
        <Button
            android:id="@+id/btn_chiudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_popup"
            android:text="@string/chiudi"
            android:textColor="#2F4047"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"/>
    </LinearLayout>

</FrameLayout>