<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="255dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#D8FCFD"
   	android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <LinearLayout
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
    	android:layout_gravity="center_horizontal">
    	<FrameLayout 
    	    android:id="@+id/layout_progress"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center_horizontal">
    	    <ProgressBar 
    	        android:id="@+id/progress_bar"
    	        android:layout_width="74dp"
    	        android:layout_height="74dp"
    	        android:layout_gravity="center"
    	        android:indeterminateOnly="true"
    	        android:indeterminateDrawable="@drawable/elah_progress"
    	        style="@android:style/Widget.ProgressBar"/>
    	    <TextView 
    	        android:id="@+id/field_progress"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:textColor="@android:color/white"
    	        android:textAppearance="@android:style/TextAppearance.Small"
    	        android:layout_gravity="center"/>
    	</FrameLayout>
 		<TextView 
		    android:id="@+id/field_msg"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#809C9D"
		    android:singleLine="true"
		    android:layout_gravity="center_horizontal"
		    android:textAppearance="@android:style/TextAppearance.Small"
		    android:shadowColor="@android:color/white"
		    android:shadowRadius="1"
		    android:layout_marginBottom="2dp"
		    android:textStyle="bold"/>
	</LinearLayout>
	<View 
	    android:id="@+id/divider_one"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#D9E7E8"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"/>
	
	<View 
	    android:id="@+id/divider_two"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#EBFDFE"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"/>
	
</LinearLayout>