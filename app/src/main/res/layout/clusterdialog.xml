<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/activity_background">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/dummyview"
        android:layout_height="match_parent" />
<LinearLayout
    android:layout_width="467dip"
    android:padding="5dp"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:background="@drawable/bk_alert"
	android:layout_centerInParent="true"
	android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/lbl_cluster_cioccolato"
            android:id="@+id/lbl_msg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <Spinner
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_cluster"
            android:id="@+id/cl_ciaoccolato"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textColor="#333333"
            android:textSize="22sp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".005dp"
        android:layout_marginTop="5dp"
        android:background="#e7e7e7"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/lbl_cluster_caramelle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <Spinner
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/btn_cluster"
            android:id="@+id/cl_caramelle"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textColor="#333333"
            android:textSize="22sp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".005dp"
        android:layout_marginTop="5dp"
        android:background="#e7e7e7"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/lbl_cluster_dessert"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <Spinner
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_cluster"
            android:id="@+id/cl_dessert"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textColor="#333333"
            android:textSize="22sp"/>

    </RelativeLayout>

    </LinearLayout>
</RelativeLayout>